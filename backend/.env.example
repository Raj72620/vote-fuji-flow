# Avalanche Voting Backend Configuration
# Copy this file to .env and update the values

# Server Configuration
PORT=3001
NODE_ENV=development

# Avalanche Network Configuration
FUJI_RPC_URL=https://api.avax-test.network/ext/bc/C/rpc
CONTRACT_ADDRESS=0x367Ecb4846fCAbE436Ed5A855DfD1377C5e5f03f

# Security Configuration
JWT_SECRET=change-this-to-a-strong-random-secret-in-production
ADMIN_PRIVATE_KEY=optional-admin-private-key-for-development-only

# Optional: Database Configuration (if using database instead of in-memory storage)
# DATABASE_URL=postgresql://user:password@localhost:5432/voting_db

# Optional: Redis Configuration (for production nonce storage)
# REDIS_URL=redis://localhost:6379

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=10

# Demo Data Configuration
ENABLE_DEMO_DATA=true
DEMO_DATA_SIZE=100